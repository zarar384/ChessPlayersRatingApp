    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Information.Player.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Information.Player.Name" class="form-control" />
                        <span asp-validation-for="Information.Player.Name" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Information.BaseInfoText"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Information.BaseInfoText" class="form-control summernote"></textarea>
                        <span asp-validation-for="Information.BaseInfoText" class="text-danger"></span>
                    </div>
                </div>
                @*<div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
